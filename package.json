{
  "name": "copilot-usage-monitor",
  "version": "1.0.0",
  "description": "macOS menu bar app to monitor GitHub Copilot usage",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac",
    "dev": "electron . --dev"
  },
  "keywords": ["github", "copilot", "usage", "monitor", "macos"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "build": {
    "appId": "com.copilot.usage.monitor",
    "productName": "Copilot Usage Monitor",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": ["dmg", "zip"]
    },
    "files": [
      "src/**/*",
      "package.json"
    ]
  }
}
